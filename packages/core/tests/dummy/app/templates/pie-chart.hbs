<h3>Apex Pie Chart</h3>
<div class="chart-container pie-chart-container">
  <NaviVisualizationConfig::Wrapper
    @request={{this.apexPieRequest}}
    @response={{this.apexPieResponse}}
    @visualization={{this.apexPieOptions}}
    @onUpdateConfig={{this.onUpdateConfigApexPie}}
  />
  <NaviVisualizations::ApexPie
    @model={{this.apexModel}}
    @options={{this.apexOptions}}
  />
</div>

<h3>Group by One dimension</h3>
<div class="chart-container pie-chart-container">
  <NaviVisualizationConfig::Wrapper
    @request={{this.request}}
    @response={{this.response}}
    @visualization={{this.visualizationOptions}}
    @onUpdateConfig={{this.onUpdateConfigOneDimension}}
  />
  <NaviVisualizations::PieChart
    @model={{this.model}}
    @options={{this.options}}
  />
</div>

