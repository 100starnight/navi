<div class='apex-bar-config'>
  <span class='apex-bar-config__chart-options-section__header'>
    Chart Options:
  </span>
  <div class='apex-bar-config__chart-options-section'>
    <div class='apex-bar-config__chart-options-section__stacked-toggle'>
      <span class='apex-bar-config__chart-options-section__stacked-toggle__label'>
        Stacked:
      </span>
      <XToggle
        class='apex-bar-config__chart-options-section__stacked-toggle__switch'
        @value={{readonly @options.series.config.stacked}}
        @onToggle={{fn this.updateChart 'stacked'}}
        @size='small'
      />
    </div>
  </div>
  <span class='apex-bar-config__chart-colors-section__header'>
    Chart Colors:
  </span>
  <div class='apex-bar-config__chart-colors-section'>
    <NaviVisualizationConfig::ColorChange
      @request={{@request}}
      @response={{@response}}
      @type='apex-line'
      @seriesConfig={{readonly @options.series.config}}
      @onUpdateConfig={{fn this.updateChart 'colors'}}
    />
  </div>
</div>
