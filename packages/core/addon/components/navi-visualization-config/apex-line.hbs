<div class='apex-line-config'>
  <span class='apex-line-config__line-options-section__header'>
    Line Options:
  </span>
  <div class='apex-line-config__line-options-section'>
    <div class='apex-line-config__line-options-section__stroke-change'>
      <span class='apex-line-config__line-options-section__stroke-change__label'>
        Stroke Style:
      </span>
      <PowerSelect
        class='apex-line-config__line-options-section__stroke-change__selector'
        @options={{this.strokeOptions}}
        @selected={{this.chosenStroke}}
        @onchange={{fn this.updateChart 'stroke'}}
        as |stroke|
      >
        <div class='apex-line-config__line-options-section__stroke-change__selector__list-item'>
          {{stroke}}
        </div>
      </PowerSelect>
    </div>
  </div>
  <span class='apex-line-config__chart-options-section__header'>
    Chart Options:
  </span>
  <div class='apex-line-config__chart-options-section'>
    <div class='apex-line-config__chart-options-section__area-toggle'>
      <span class='apex-line-config__chart-options-section__area-toggle__label'>
        Area:
      </span>
      <XToggle
        class='apex-line-config__chart-options-section__area-toggle__switch'
        @value={{readonly @options.series.config.area}}
        @onToggle={{fn this.updateChart 'area'}}
        @size='small'
      />
    </div>
  </div>
  <span class='apex-line-config__chart-colors-section__header'>
    Chart Colors:
  </span>
  <div class='apex-line-config__chart-colors-section'>
    <NaviVisualizationConfig::ColorChange
      @request={{@request}}
      @response={{@response}}
      @type='apex-line'
      @seriesConfig={{readonly @options.series.config}}
      @onUpdateConfig={{fn this.updateChart 'colors'}}
    />
  </div>
</div>
