<div class="metric-change">
  <div class="metric-change__header">Metric</div>
  <PowerSelect
      class="metric-change__select"
      @tagName="div"
      @options={{this.metrics}}
      @selected={{this.selectedMetric}}
      @searchEnabled={{false}}
      @onchange={{this.onUpdateChartMetric}}
      @dropdownClass="metric-change__select__dropdown"
      as |metric|
    >
      {{metric.metric}}
    </PowerSelect>
</div>
