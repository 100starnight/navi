<section class='dir-sidebar__groups'>
  {{#each directories as | directory |}}
    <div
      class='dir-sidebar__group {{if (eq selectedDirectory directory) 'dir-sidebar__group--selected'}}'
      onclick={{pipe (action (mut selectedDirectory) directory) (action (mut selectedFilter) (object-at 0 directory.filters))}}
    >
      <div>
        <span class='dir-sidebar__group--icon'>{{navi-icon 'folder-o'}}</span>
        <span class='dir-sidebar__group--name'>{{directory.name}}</span>
      </div>
      <div class='dir-sidebar__group--arrow-icon'>{{navi-icon 'chevron-right'}}</div>
    </div>
  {{/each}}
</section>
<section class='dir-sidebar__filters'>
  {{#each selectedDirectory.filters as | filter |}}
    <div class='dir-sidebar__filter {{if (eq selectedFilter filter) 'dir-sidebar__filter--selected'}}' onclick={{action (mut selectedFilter) filter}}>
      <div>
        <span class='dir-sidebar__filter--icon'>{{navi-icon filter.icon}}</span>
        <span class='dir-sidebar__filter--name'>{{filter.name}}</span>
      </div>
      <div class='dir-sidebar__filter--arrow-icon'>{{navi-icon 'chevron-right'}}</div>
    </div>
  {{/each}}
</section>
