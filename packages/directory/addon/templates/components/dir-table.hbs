{{#light-table table
  classNames='dir-table'
  responsive=true
  as |t|
}}
  {{t.head
    is-sortable=false
    fixed=true
  }}

  {{#t.body 
    canSelect=false
    as |body|
  }}
    {{#if isLoading}}
      {{#body.loader}}
        {{navi-loader}}
      {{/body.loader}}
    {{/if}}

    {{#if table.isEmpty}}
      {{#body.no-data}}
        {{#if isSearching}}
          {{#navi-info-message}}
            No search results.
          {{/navi-info-message}}
        {{else}}
          {{#navi-info-message}}
            Nothing to see here.
          {{/navi-info-message}}
        {{/if}}
      {{/body.no-data}}
    {{/if}}
  {{/t.body}}
{{/light-table}}
