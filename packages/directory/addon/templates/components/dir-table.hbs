{{#basic-dropdown classNames='dir-table-filter' as |dd|}}
  {{#dd.trigger class='dir-table-filter__trigger'}}
    {{capitalize selectedFileType}} 
    {{navi-icon 'caret-down' class='dir-table-filter__dropdown-icon'}}
  {{/dd.trigger}}

  {{#dd.content class='dir-table-filter__dropdown-options dropdown-arrow'}}
    {{#each fileTypes as | type |}}
      <div 
        class={{concat 'dir-table-filter__dropdown-option' (if (eq type selectedFileType) ' dir-table-filter__dropdown-option--selected')}}
        onclick={{pipe (action 'filterByType' type) (action 'close' dd)}}
      >
        {{capitalize type}}
      </div>
    {{/each}}
  {{/dd.content}}
{{/basic-dropdown}}

{{#light-table table
  classNames='dir-table'
  responsive=true
  as |t|
}}
  {{t.head
    fixed=true
  }}

  {{#t.body as |body|}}
    {{#if isLoading}}
      {{#body.loader}}
        Loading...
      {{/body.loader}}
    {{/if}}

    {{#if table.isEmpty}}
      {{#body.no-data}}
        {{#if isSearching}}
          No search results.
        {{else}}
          No stuff found.
        {{/if}}
      {{/body.no-data}}
    {{/if}}
  {{/t.body}}
{{/light-table}}
