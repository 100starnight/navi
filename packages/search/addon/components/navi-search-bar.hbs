<div class="input-group has-button">
    <div class="input has-icon-back">
        <Input @type="text" @value={{this.searchQuery}} @placeholder="Search" @class="search-input"
            @key-down={{this.search}} />
        <span class="d-icon d-search is-brand-700"></span>
        <button {{on "click" this.search}} class="button has-icon search-button">
            <i class="d-icon d-search is-small"></i>
        </button>
    </div>
</div>
<div class="results">
    {{#each this.searchProviders as |provider|}}
    {{component provider query=this.searchQuery}}
    {{/each}}
</div>
